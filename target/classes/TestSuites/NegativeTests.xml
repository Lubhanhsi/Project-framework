<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="NegativeTests" verbose="1" >

    <test name="negativeTestWrongUsername">
        <parameter name="username" value="Lubhanshi" />
        <parameter name="password" value="SuperSecretPassword!" />
        <parameter name="expectedMessage" value="Your username is invalid!" />
        <classes>
            <class name="com.herokuapp.theinternet.NegativeTest">
                    <methods>
                        <include name="loginFailWrongPassword"></include>
                    </methods>
            </class>
        </classes>
    </test>
    <test name="negativeTestWrongPassword">
        <parameter name="username" value="tomsmith" />
        <parameter name="password" value="12345" />
        <parameter name="expectedMessage" value="Your password is invalid!" />
        <classes>
            <class name="com.herokuapp.theinternet.NegativeTest">
                <methods>
                    <include name="loginFailWrongPassword"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>