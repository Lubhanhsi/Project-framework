<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AllTest" verbose="1" >
    <test name="positiveTest" >
        <classes>
            <class name="com.herokuapp.theinternet.PositiveTest" />
        </classes>
    </test>

    <test name="negativeTestWrongPassword">
        <parameter name="username" value="tomsmith" />
        <parameter name="password" value="12345" />
        <parameter name="expectedMessage" value="Your password is invalid!" />
        <classes>
            <class name="com.herokuapp.theinternet.NegativeTest">
                <methods>
                    <include name="loginFailWrongPassword"></include>
                </methods>
            </class>
        </classes>
    </test>
</suite>
